{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/v1/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "MintBalance",
    "version": "1.0.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "MintBalance",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 400,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.mintflow.mintbalance",
      "publisher": "MintFlow Technologies",
      "icon": ["icons/icon.ico", "icons/icon.png"],
      "targets": ["msi", "nsis", "app", "dmg"]
    },
    "allowlist": {
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "scope": ["https://auth.mintflow.dev/*", "https://*/*", "http://*/*"]
      },
      "window": {
        "setIcon": true
      }
    },
    "security": {
      "csp": null
    }
  }
}
